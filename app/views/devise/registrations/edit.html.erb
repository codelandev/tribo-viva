<h2>Editar Usuário</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Esperando confirmação para: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :cpf, required: true, title: 'Seu CPF', input_html: { class: 'js-cpf' } %>
    <%= f.input :phone, required: true, label: 'Celular', title: 'Celular para contato', input_html: { class: 'js-phone' } %>
    <%= f.input :password, autocomplete: "off", hint: "Deixe em branco se não quer alterar", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: "Precisamos da senha atual para realizar a atualização", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Atualizar" %>
  </div>
<% end %>

<h3>Cancelar minha conta</h3>

<p>Descontente? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza?" }, method: :delete %></p>

<%= link_to "Voltar", :back %>
