<div class="devise-links">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Lembrou que já tem uma conta? É só entrar!", new_session_path(resource_name) %><br />
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Não tem conta ainda? Cadastre-se!", new_registration_path(resource_name) %><br />
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br />
  <% end -%>
</div>
